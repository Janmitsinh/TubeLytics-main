# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index(request: play.mvc.Http.Request)
GET  /chat  controllers.HomeController.socket

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
GET       /wordStats/:a      controllers.HomeController.getWordStats(a: String)
GET     /channelProfile/:channelId      controllers.HomeController.getChannelProfile(channelId: String)
GET     /videosByTag/:tag          controllers.HomeController.videosByTag(tag: String)
GET     /videoTags/:videoId        controllers.HomeController.videoTags(videoId: String)
